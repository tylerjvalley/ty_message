<h1 align="center">Log in</h1>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email %>
          <div class="ui left icon input">
            <%= f.email_field :email, placeholder: "Enter Email", autocomplete: "email" %>
            <i class="at icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Enter Password", autocomplete: "current-password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <span class="rememberme"><%= f.label :remember_me %></span>
          </div>
        <% end %>
        <%= f.submit "Log in", class: "ui blue submit button submit_button",
                                style: "font-size: 1.4em; font-family: Lato;" %>
        <% end %>
      </div>
    </div>
    <div class="middle aligned column">
      <div class="ui big button">
        <i class="signup icon"></i>
        <%= link_to "Sign up", new_registration_path(resource_name), style: "color: grey;" %>
      </div>
    </div>
  </div>
  <div class="ui vertical divider or-divider">
    Or
  </div>
</div>
